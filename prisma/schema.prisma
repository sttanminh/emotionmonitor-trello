datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model TrelloCard {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  task          String
  label         String
  metric        Metric[]
  timestamp     DateTime
  status        Status
  reflection    String
  owner         User     @relation(fields: [ownerId], references: [id])
  ownerId       String   @db.ObjectId
  project       Project  @relation(fields: [projectId], references: [id])
  projectId     String   @db.ObjectId
}

model JiraCard {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  task          String
  label         String
  metric        Metric[]
  timestamp     DateTime
  status        Status
  reflection    String
  owner         User     @relation(fields: [ownerId], references: [id])
  ownerId       String   @db.ObjectId
  project       Project  @relation(fields: [projectId], references: [id])
  projectId     String   @db.ObjectId
}

model User {
  id                String      @id @default(auto()) @map("_id") @db.ObjectId
  name              String
  email             String
  trelloCards       TrelloCard[]
  jiraCards         JiraCard[]
  adminProjectIds   String[]    @db.ObjectId
  adminProjects     Project[]   @relation(fields: [adminProjectIds], references: [id])
}

model Project{
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  source        Source
  adminIds      String[]  @db.ObjectId
  adminList     User[]    @relation(fields: [adminIds], references: [id])
  trelloCards   TrelloCard[]
  jiraCards     JiraCard[]
}

type Metric{
  name   String
  score  Int
}

enum Status {
  IN_ANALYSIS
  IN_DEV
  IN_SYSTEM_TEST
  DONE
}

enum Source {
  TRELLO
  JIRA
  GITHUB
}