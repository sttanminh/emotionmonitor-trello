datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model TrelloCard {
  id          String       @id @map("_id") @db.ObjectId
  taskName    String
  description String?
  project     Project      @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId   String       @db.ObjectId
  submissions Submission[]
}

model User {
  id              String       @id @map("_id") @db.ObjectId
  name            String
  email           String?
  submissions     Submission[]
  adminProjectIds String[]     @db.ObjectId
  adminProjects   Project[]    @relation(fields: [adminProjectIds], references: [id])
}

model Project {
  id              String       @id @map("_id") @db.ObjectId
  source          Source
  name            String
  emojis          String[]
  referenceNumber Int?
  metrics         Metric[]
  adminIds        String[]     @db.ObjectId
  adminList       User[]       @relation(fields: [adminIds], references: [id])
  trelloCards     TrelloCard[]
}

model Metric {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  active    Boolean  @default(true)
  projectId String   @db.ObjectId
  Project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  ratings   Rating[]
  levels    Level[]
}

model Level {
  id         String  @id @default(auto()) @map("_id") @db.ObjectId
  levelLabel String
  levelOrder Int
  metricId   String  @db.ObjectId
  metric     Metric  @relation(fields: [metricId], references: [id])
}

model Submission {
  id           String      @id @default(auto()) @map("_id") @db.ObjectId
  reflection   String
  ratings      Rating[]
  timestamp    DateTime
  user         User        @relation(fields: [userId], references: [id])
  userId       String      @db.ObjectId
  trelloCardId String?     @db.ObjectId
  trelloCard   TrelloCard? @relation(fields: [trelloCardId], references: [id])
}

model Rating {
  id           String     @id @default(auto()) @map("_id") @db.ObjectId
  emoScore     Int
  level        Int
  submissionId String     @db.ObjectId
  submission   Submission @relation(fields: [submissionId], references: [id])
  metricId     String     @db.ObjectId
  metric       Metric     @relation(fields: [metricId], references: [id])
}

enum Source {
  TRELLO
  JIRA
  GITHUB
}
